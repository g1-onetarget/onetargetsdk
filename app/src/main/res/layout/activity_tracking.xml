<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btBack"
            android:layout_width="@dimen/w_50"
            android:layout_height="@dimen/w_50"
            android:layout_marginStart="@dimen/margin_padding_small"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/margin_padding_small"
            android:src="@drawable/baseline_arrow_back_ios_black_48"
            android:tint="@color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/btTestTrackingByParams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_medium"
        android:layout_marginTop="@dimen/margin_padding_medium"
        android:layout_marginEnd="@dimen/margin_padding_medium"
        android:text="Send Event (Params)"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btTestTrackingByObject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_medium"
        android:layout_marginEnd="@dimen/margin_padding_medium"
        android:text="Send Event (Object)"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btAddToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_medium"
        android:layout_marginEnd="@dimen/margin_padding_medium"
        android:text="add_to_cart"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btInputPassengerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_medium"
        android:layout_marginEnd="@dimen/margin_padding_medium"
        android:text="input_passenger_info"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btPurchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_medium"
        android:layout_marginEnd="@dimen/margin_padding_medium"
        android:text="purchase"
        tools:ignore="HardcodedText" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_padding_medium">

            <TextView
                android:id="@+id/tvInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/txt_small" />

            <TextView
                android:id="@+id/tvOutput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_padding_medium"
                android:textSize="@dimen/txt_small" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
